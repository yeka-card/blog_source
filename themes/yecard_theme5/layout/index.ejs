<div class="posts-grid">
  <% page.posts.each(function(post) { %>
    <a href="<%- url_for(post.path) %>" class="post-card-link">
      <div class="post-card">
        <h2 class="post-title"><%= post.title %></h2>
      <div class="post-meta">
        <span class="post-date"><%= date(post.date, 'YYYY-MM-DD') %></span>
        <% if (post.tags && post.tags.length) { %>
          <% post.tags.forEach(function(tag) { %>
            <!-- <a href="<%- url_for(tag.path) %>" class="post-tag">#<%= tag.name %></a> -->
            <span class="post-tag">#<%= tag.name %></span>
            <% }); %>
        <% } %>
      </div>
      <div class="post-excerpt">
        <% if (post.excerpt) { %>
          <%- post.excerpt %>
        <% } else { %>
          <%- truncate(strip_html(post.content), {length: 150}) %>
        <% } %>
      </div>
    </div>
  <% }); %>
</div>
</a>
<% if (page.total > 1) { %>
  <div class="pagination">
    <% if (page.prev) { %>
      <a href="<%- url_for(page.prev_link) %>" class="pagination-prev">上一页</a>
    <% } %>
    <% if (page.next) { %>
      <a href="<%- url_for(page.next_link) %>" class="pagination-next">下一页</a>
    <% } %>
  </div>
<% } %>
