<!DOCTYPE html>
<html lang="<%= config.language || 'zh-CN' %>">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" href="<%- url_for(theme.logo) %>" type="image/png">

  <title>
    <%= config.title %>
    <% if (config.subtitle) { %> - <%= config.subtitle %><% } %>
    <% if (page.title) { %> - <%= page.title %><% } %>
  </title>

  <meta name="description" content="<%= page.description || config.description || '' %>">
  <meta name="keywords" content="<%= (page.keywords || config.keywords || []).join(', ') %>">

  <link rel="stylesheet" href="<%- url_for('/css/style.css') %>">
</head>

<body>
  <header class="header">
    <div class="container">
      <div class="header-inner" style="display: flex; justify-content: space-between; align-items: center;">
        
        <a href="<%- url_for('/') %>" class="logo" style="display: flex; align-items: center; gap: 10px;">
          <img src="<%- url_for(theme.logo) %>" alt="W" class="logo-img" style="height: 36px;">
          <span style="font-size: 22px; font-weight: bold; color: #333;"><%= theme.title %></span>
        </a>
  
        <nav class="nav" style="display: flex; gap: 20px;">
          <% for (const [name, path] of Object.entries(theme.menu)) { %>
            <a href="<%- url_for(path) %>" class="nav-item" style="font-size: 18px; font-weight: 500;"><%= name %></a>
          <% } %>
        </nav>
      </div>
    </div>
  </header>
  
  <section class="hero">
    <div class="container">
      <div class="hero-inner">
        <div class="hero-content">
          <div class="hero-title">
            <img src="<%- url_for(theme.logo) %>" alt="W Logo" class="hero-logo">
            <h1 class="hero-heading"><%= theme.hero.title %></h1>
          </div>
          <p class="hero-subtitle"><%= theme.hero.subtitle %></p>
          <div class="hero-buttons">
            <% theme.hero.buttons.forEach(function(button) { %>
              <a href="<%= button.url %>" class="btn btn-<%= button.type %>"><%= button.text %></a>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <main class="main">
    <div class="container">
      <%- body %>
    </div>
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-inner">
        <div class="footer-links">
          <% for (const [name, path] of Object.entries(theme.footer_links)) { %>
            <a href="<%- url_for(path) %>" class="footer-link"><%= name %></a>
          <% } %>
        </div>
        <div class="footer-copyright">
          &copy; <%= date(new Date(), 'YYYY') %> <%= config.title %>. All Rights Reserved.
        </div>
      </div>
    </div>
  </footer>

  <script src="<%- url_for('/js/script.js') %>"></script>
</body>
</html>
